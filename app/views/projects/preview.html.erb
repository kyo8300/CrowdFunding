<div class="preview">
    <div class="bg-light border-top border-bottom">
        <div class="top-heading pb-3 mb-4 container">
            <h1 class="text-center pb-2 mt-5 font-weight-bold"><%= @project.title %></h1>
            <h4 class="text-center text-secondary pb-2"><%= @project.subtitle %></h4>
            <div class="row mt-5">
                <%= image_tag @project.image.url, :class => "img-fluid col-8 mb-2" %>
                <div class="col-4 pl-5">
                    <div class="price-display">
                        <h3 class="pt-4">US$ 0</h3>
                        <p>pledged of US$ <%= @project.goal %> goal</p>
                    </div>

                    <div class="backers mt-3">
                        <h3>0</h3> backers
                    </div>

                    <div class="mt-3">
                        <h3><%= @project.date_diff %></h3> days to go
                    </div>
                </div>

                <div class="pl-3 ml-3">
                    <div class="d-inline-block pr-3">User</div>
                    <div class="d-inline-block p-3"><%= @project.location %></div>
                    <div class="d-inline-block p-3"><%= @project.category %></div>
                </div>

            </div>
        </div>
    </div>

    <div class="description container mt-5">
        <div class="row">
            <div class="Story pl-4 col-8">
              <h3 class="mb-5">About</h3>
              <%= @project.story.html_safe %>
            </div>

            <div class="reward col-4">
              <h3 class="mb-5">Rewards</h3>
              <% @project.rewards.each do |reward| %>
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title"><%= reward.title %></h5>
                        <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                        <a href="#" class="btn btn-primary">Go somewhere</a>
                    </div>
                </div>
              <% end %>
            </div>
        </div>
    </div>
</div>