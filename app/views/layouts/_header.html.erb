<header class="border-bottom ">
  <div class="container my-2">
    <div class="row align-items-center app-header">

      <div class="searchbox col-md-4">
          <div class="form-group d-inline-flex">
            <%= icon('fas', 'search', class: 'search-icon mr-1') %>
            <%= search_form_for @search, url: projects_path do |f| %>
              <%= f.text_field :story_or_title_cont ,placeholder: 'Search for projects', :class => "form-control form-control-underlined form-search" %>
              <%= f.submit "Search" , class: 'search-btn', style: 'display: none;'%>
            <% end %>
          </div>
      </div>

      <div class="appname col-md-4 my-3">
        <h3 class="text-center font-weight-bold"><%= link_to "APP NAME", root_path %></h3>
      </div>

      <div class="user-page col-md-4 clearfix">
        <% if user_signed_in? %>
          <div class="dropdown">
            <button class="btn btn-secondary btn-circle float-right dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="fas fa-user"></i>
            </button>

            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <div class="dropdown-item" href="#">
                <%= link_to myprojects_path do %>
                  <%= icon('fas', 'pencil-alt', :class => "mr-2") %>My projects
                <% end %>
              </div>
              <a class="dropdown-item" href="#"><%= icon('fas', 'donate', :class => "mr-2") %>Backed projects</a>
              <div class="dropdown-item">
                <%= link_to user_path(current_user) do %>
                  <%= icon('fas', 'user', :class => "mr-2") %>Profile
                <% end %>
              </div>
              <div class="dropdown-item">
                <%= link_to edit_user_path(current_user) do %>
                  <%= icon('fas', 'cog', :class => "mr-2") %>Setting
                <% end %>
              </div>
              <div class="dropdown-item">
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <%= icon('fas', 'sign-out-alt', :class => "mr-2") %>Log out
                <% end %>
              </div>
            </div>
          </div>
        <% else %>
          <div class="float-right">
            <div><%= link_to "Sign up", new_user_registration_path %> | <%= link_to "Log in", new_user_session_path %></div>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</header>