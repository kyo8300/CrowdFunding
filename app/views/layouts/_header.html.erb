<header class="border-bottom ">
  <div class="container my-2">
    <div class="row align-items-center app-header">

      <div class="searchbox col-md-4">
          <div class="form-group d-inline-flex">
            <%= icon('fas', 'search', class: 'search-icon mr-1') %>
            <%= search_form_for @search, url: projects_path do |f| %>
              <%= f.text_field :story_or_title_cont ,placeholder: 'Search for projects', :class => "form-control form-control-underlined form-search" %>
              <%= f.submit "Search" , class: 'search-btn', style: 'display: none;'%>
            <% end %>
          </div>
      </div>

      <div class="appname col-md-4 my-3">
        <h3 class="text-center font-weight-bold"><%= link_to "APP NAME", root_path %></h3>
      </div>

      <div class="user-page col-md-4 clearfix">
        <div class="dropdown">
          <button class="btn btn-secondary btn-circle float-right dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fas fa-user"></i>
          </button>

          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="#">Action</a>
            <a class="dropdown-item" href="#">Another action</a>
            <a class="dropdown-item" href="#">Something else here</a>
          </div>
        </div>
      </div>

    </div>

