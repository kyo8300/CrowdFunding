<div class="container">
  <div class="login-page col-md-6 pt-5">
    <div class="form">
      <h4 class="mb-4">Sign up</h4>
      <div class="login-form">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "name" %>

          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email" %>

          <%= f.password_field :password, autocomplete: "current-password", placeholder: "password" %>

          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "password confirmation" %>

          <%= f.submit "Sign up", :class => "login-button" %>
        <% end %>
        <p class="message"><%= render "devise/shared/links" %></p>
      </div>
    </div>
  </div>
</div>